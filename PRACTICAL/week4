ques 1

#include <iostream>
using namespace std;

void merge(int a[],int left,int mid,int right)
{
    
    int one=mid-left+1;
    int two=right-mid;
    int leftarray[one],rightarray[two];
    for(int i=0;i<one;i++)
    {
        leftarray[i]=a[left+i];
        
    }
     for(int j=0;j<two;j++)
    {
        rightarray[j]=a[mid+1+j];
        
    }
    int index1=0;
    int index2=0;
    int index3=left;
    while(index1<one&&index2<two)
    {
       if(leftarray[index1]<=rightarray[index2])
      {
        a[index3]=leftarray[index1];
        index1++;
      }
      else
       {
           a[index3]=rightarray[two];
            two++;
        }
      index3++;
      
    }
    while(index1<one)
    {
        a[index3]=leftarray[index1];
        index1++;
        index3++;
        
    }
    while(index2<two)
    {
        a[index3]=rightarray[index2];
        index2++;
        index3++;
        
    }


}

void mergesort(int a[],int i,int j)
{
   
    if(i<j)
    {
       int mid=(i+(j-i))/2;
       mergesort(a,i,mid);
       mergesort(a,mid+1,j);
       merge(a,i,mid,j); 
    }
     
    
       

}
int main()
{
    int n ;
    cout<<"enter the number of elements in an array"<<endl;
    cin>>n;
    int a[n];
    cout<<"enter elements of an array"<<endl;
    for(int i=0;i<n;i++)
    {
        cin>>a[i];
    }
      mergesort(a,0,n-1);
      cout<<"sorted array is"<<endl;
    for(int t=0;t<n;t++)
    {
        cout<<a[t];
    }
    return 0;

}




ques2 Quick Sort
#include <iostream>
using namespace std;
int partition(int a[],int low,int high)
{
    int pivot=a[low],temp;
    int i=low+1;
    int j=high;
    do{
        while(a[i]<=pivot)
        i++;
        while(a[j]>pivot)
        j--;
        if(i<j)
        {
            temp=a[i];
            a[i]=a[j];
            a[j]=temp;
        }
    }while(i<j);
    temp=a[low];
    a[low]=a[j];
    a[j]=temp;
    return j;
}
void quick(int a[],int low,int high)
{
    int partionIndex;
    if(low<high)
    {
        partionIndex=partition(a,low,high);
        quick(a,low, partionIndex-1);
        quick(a, partionIndex+1,high);
    }
}

int main()
{
    int n,i;
    cout<<"enter number of element"<<endl;
    cin>>n;
    int a[n];
    cout<<"enter elements in an array"<<endl;
    for(i=0;i<n;i++)
    cin>>a[i];
    quick(a,0,n-1);
    cout<<"array in sorted form are:"<<endl;
    for(i=0;i<n;i++)
    cout<<a[i]<<" ";

    return 0;
}
